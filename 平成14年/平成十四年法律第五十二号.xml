      <Article Delete="false" Hide="false" Num="50">
        <ArticleCaption>（株式会社日本政策金融公庫法等の改正に伴う経過措置）</ArticleCaption>
        <ArticleTitle>第五十条</ArticleTitle>
        <Paragraph Hide="false" Num="1">
          <ParagraphNum/>
          <ParagraphSentence>
            <Sentence WritingMode="vertical"/>
          </ParagraphSentence>
        </Paragraph>
        <Paragraph Hide="false" Num="2">
