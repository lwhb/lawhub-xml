      <Paragraph Hide="false" Num="1">
        <ParagraphNum/>
        <ParagraphSentence>
          <Sentence WritingMode="vertical">この府令は、平成十六年四月一日から施行する。</Sentence>
        </ParagraphSentence>
      </Paragraph>
    </SupplProvision>
    <SupplProvision AmendLawNum="令和元年五月七日内閣府令第二号" Type="Amend">
      <SupplProvisionLabel>附　則</SupplProvisionLabel>
